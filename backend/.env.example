# Application Settings
PROJECT_NAME="Cyber SOP Assistant"
VERSION="1.0.0"
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=  # Optional API key for authentication

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=sqlite:///./data/cyber_sop.db

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct
OLLAMA_TIMEOUT=120

# ChromaDB Configuration
CHROMA_DB_PATH=./data/vectorstore
CHROMA_COLLECTION_NAME=sop_documents

# Embedding Model
EMBEDDING_MODEL_PATH=./models/embeddings/all-MiniLM-L6-v2
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# RAG Configuration
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7

# LLM Parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TOP_P=0.9
LLM_TOP_K=40

# Cache Configuration
CACHE_ENABLED=true
CACHE_PATH=./data/cache
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log

# Scraper Configuration
SCRAPER_USER_AGENT="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36"
SCRAPER_DELAY=2

# Supported Languages
SUPPORTED_LANGUAGES=en,hi,ta,te,bn,mr,gu,kn
